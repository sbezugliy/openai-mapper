#!/usr/bin/env ruby
# frozen_string_literal: true

require "bundler/setup"
require "openai"

require "open-uri"
require "base64"

# You can add fixtures and/or initialization code here to make experimenting
# with your gem easier. You can also use a different console, if you like.

dalle = Openai::Images::Create.new
dalle.request(
  prompt: "Create banner image, poster, wallpapper without any text, only futuristic picture for 'ApexAxis' company with next criterios: apex axis, hight tech, research and development, neural networks, pyramid, data flows, energy flows, growth, bright, human",
  n: 10,
  size: "1024x1024",
  user: "s.bezugliy@codenv.top",
  response_format: "b64_json"
)

dalle.data.data.each.with_index do |image, index|

 f = File.new(File.join(__dir__, "../output/#{dalle.data.created.to_s}-#{index.to_s}.png"), "w")
 f.write(Base64.decode64(image.b64_json))
 f.close
end



